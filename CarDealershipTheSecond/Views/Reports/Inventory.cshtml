
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory Report</h2>
<br />
<br />

<div class="container">
    <div class="row"><b>New Vehicles</b></div>
    <div class="row">
        <div class="col-sm-7">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Year</th>
                        <th scope="col">Make</th>
                        <th scope="col">Model</th>
                        <th scope="col">Count</th>
                        <th scope="col">Stock Value</th>
                    </tr>
                </thead>
                <tbody id="newVehicles"></tbody>
            </table>
        </div>
    </div>
    <div class="row"><b>Used Vehicles</b></div>
    <div class="row">
        <div class="col-sm-7">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Year</th>
                        <th scope="col">Make</th>
                        <th scope="col">Model</th>
                        <th scope="col">Count</th>
                        <th scope="col">Stock Value</th>
                    </tr>
                </thead>
                <tbody id="usedVehicles"></tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/reportsInventory.js"></script>
}